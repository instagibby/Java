
public class DataTypeDemoDavis {
	
	public static void main(String[] args) {
		
		// Spencer Davis 2018 Java
		// Regular variables
		System.out.println("Here are regular variables which could be changed!" + "\n");
		
		int numOfCars = 1;
		System.out.println("I almost own "+ numOfCars + " car!");
		
		double carsPaidOff = 0.9;
		System.out.println("I have paid off " + carsPaidOff + " of a car!");
		
		float carPercentToPayOff = 10.010f;
		System.out.println("I have " + carPercentToPayOff + "% left to pay off.");
		
		boolean isCarPaidOff = false;
		System.out.println("It is " + isCarPaidOff + " that I have paid off my car yet.");
		
		short carLoanLeft = 400;
		System.out.println("The total amount left I owe on my car is only $" + carLoanLeft + "!");
		
		long desiredBankAccount = 100000;
		System.out.println("If I could have my car paid off maybe I would have $" + desiredBankAccount + " in my bank!");
		
		byte monthlyCarPayment = 114;
		System.out.println("I only have to pay $" + monthlyCarPayment + " per month!");
		
		char a = 'A';
		System.out.println("If I study hard I know I can get an " + a + "!");
		System.out.println("\n");
			
		// Constants
		System.out.println("And here are constants which cannot be changed!" + "\n");
		final int constNumOfCars = 1;
		System.out.println("I almost own "+ constNumOfCars + " car!");
		
		final double constCarsPaidOff = 0.9;
		System.out.println("I have paid off " + constCarsPaidOff + " of a car!");
		
		final float constCarPercentToPayOff = 10.010f;
		System.out.println("I have " + constCarPercentToPayOff + "% left to pay off.");
		
		final boolean constIsCarPaidOff = false;
		System.out.println("It is " + constIsCarPaidOff + " that I have paid off my car yet.");
		
		final short constCarLoanLeft = 400;
		System.out.println("The total amount left I owe on my car is only $" + constCarLoanLeft + "!");
		
		final long constDesiredBankAccount = 100000;
		System.out.println("If I could have my car paid off maybe I would have $" + constDesiredBankAccount + " in my bank!");
		
		final byte constMonthlyCarPayment = 114;
		System.out.println("I only have to pay $" + constMonthlyCarPayment + " per month!");
		
		final char constA = 'A';
		System.out.println("If I study hard I know I can get an " + constA + "!");

		
		
	}
}
